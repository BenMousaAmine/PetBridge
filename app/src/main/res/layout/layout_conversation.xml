<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    >
        <TextView
            android:id="@+id/leftMessageLayout"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:text="Name"
            android:background="@drawable/edit_text_radius"
            android:backgroundTint="@color/sender"
            android:textColor="@color/black"
            android:textSize="23.40dp"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/rightMessageLayout"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:text="Name"
            android:background="@drawable/edit_text_radius"
            android:backgroundTint="@color/reciver"
            android:textSize="23.40dp"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            />



</RelativeLayout>